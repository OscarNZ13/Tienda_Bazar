@model Tienda_Bazar.Models.ViewModels.UsuarioVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(90deg, #1e3c72, #2a5298, #6dd5fa);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: Arial, sans-serif;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.85);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            padding: 20px;
        }

        .input-group {
            margin-bottom: 1rem;
        }

        .input-group-text {
            width: 40px;
            justify-content: center;
            background-color: #007bff;
            color: white;
            border-top-left-radius: 10px;
            border-bottom-left-radius: 10px;
        }

        .form-control {
            border-top-right-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .card-header, .card-footer {
            background: none;
            border: none;
        }

        .btn-primary {
            width: 100%;
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .link-signup {
            color: #007bff;
            text-decoration: none;
        }

            .link-signup:hover {
                text-decoration: underline;
            }
    </style>
</head>

<body>
    <div class="card">
        <div class="card-header text-center">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Acceso" asp-action="Login" method="post">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                    <input class="form-control" type="text" placeholder="Username" required asp-for="NombreUsuario" />
                </div>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    <input class="form-control" type="password" placeholder="Password" required asp-for="Contrasena" />
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">@ViewData["Mensaje"]</div>
                }
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div class="card-footer text-center">
            <a href="#" class="link-signup">Forgot your password?</a>
        </div>
        <div class="card-footer text-center">
            <span>New here? </span><a asp-controller="Acceso" asp-action="Registro" class="link-signup">Sign Up</a>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
