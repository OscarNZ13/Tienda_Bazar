@model Tienda_Bazar.Models.ViewModels.UsuarioVM

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>

<body class ="bg-primary">

    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-lg-5">
                            <div class="card shadow-lg border-0 rounded-lg mt-5">
                                <div class="card-header"><h3 class="text-center font-weight-light my-4">Iniciar Sesion</h3></div>
                                <div class="card-body">
                                    <form asp-controller="Acceso" asp-action="Login" method="post">
                                        <div class="form-floating mb-3">
                                            <input class="form-control mb-3" type="text" placeholder="Email" required
                                                   asp-for="NombreUsuario" text-center/>
                                            <label for="NombreUsuario">Nombre Usuario</label>
                                        </div>
                                        <div class="form-floating mb-3">
                                            <input class="form-control mb-3" type="password" placeholder="Contraseña" required
                                                   asp-for="Contrasena" />
                                            <label for="Contrasena">Contrasena</label>
                                        </div>

                                        @if (ViewData["Mensaje"] != null)
                                        {
                                            <div class="alert alert-danger" role="alert">@ViewData["Mensaje"]</div>
                                        }

                                        <div class="card-footer text-center py-3">
                                            <button class="btn btn-primary" type="submit">Iniciar Sesion</button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer text-center py-3">
                                    <div class="small">
                                        ¿No estas registrado?<a asp-controller="Acceso" asp-action="Registro">Registrarme</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
