@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />
<br />
<div class="container-fluid py-5 bg-light text-dark">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-3 font-weight-bold text-primary mb-4">¡Bienvenido a Nuestro Bazar y Librería @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()!</h1>
            <p class="lead text-secondary mb-4">Descubre una amplia variedad de productos exclusivos y libros únicos solo para nuestros socios.</p>
            <div class="d-flex">
                <a href="@Url.Action("Contacto", "Paginas")" class="btn btn-info btn-lg mr-3">Contacto</a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/Images/imagen-bienvenida.jpg" alt="Bienvenida" class="img-fluid rounded-circle shadow-lg" style="max-width: 80%;">
        </div>
    </div>
</div>


