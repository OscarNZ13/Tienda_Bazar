@using System.Security.Claims
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Bazar y Librería</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>
        body {
            padding-top: 56px;
        }

        .navbar-custom {
            background-color: #343a40;
        }

        .footer-custom {
            background-color: #343a40;
            color: white;
            padding: 20px 0;
        }

            .footer-custom a {
                color: #f8f9fa;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom fixed-top">

        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="navbar-brand ps-3" asp-action="Index" asp-controller="Home">
                    @User.Claims.Where(c => c.Type == ClaimTypes.Name).Select(c => c.Value).SingleOrDefault()
                </a>
                <h5 class="display-4">
                    <h1 hidden>
                        @User.Claims.Where(c => c.Type == ClaimTypes.NameIdentifier).Select(c => c.Value).SingleOrDefault()
                    </h1>
                </h5>
            }
            else
            {
                <a class="navbar-brand" href="@Url.Action("Bienvenida", "Paginas")">Bazar y Librería</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Bienvenida", "Paginas")">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contacto", "Paginas")">Contacto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Redes", "Paginas")">Redes Sociales</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link btn btn-success text-white" href="@Url.Action("Login", "Acceso")">Iniciar Sesión</a>
                        </li>
                    </ul>
                </div>
            }

        </div>

    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer-custom mt-5">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>Enlaces</h5>
                    <ul class="list-unstyled">
                        <li><a href="@Url.Action("Bienvenida", "Paginas")">Inicio</a></li>
                        <li><a href="@Url.Action("Contacto", "Paginas")">Contacto</a></li>
                        <li><a href="@Url.Action("Redes", "Paginas")">Redes Sociales</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Sobre Nosotros</h5>
                    <p>Somos una tienda bazar y librería dedicada a ofrecer productos únicos y exclusivos para nuestros socios.</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Síguenos</h5>
                    <a href="#" class="text-decoration-none"><i class="fab fa-facebook fa-2x mx-2"></i></a>
                    <a href="#" class="text-decoration-none"><i class="fab fa-twitter fa-2x mx-2"></i></a>
                    <a href="#" class="text-decoration-none"><i class="fab fa-instagram fa-2x mx-2"></i></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <p class="mb-0">© 2024 Bazar y Librería. Todos los derechos reservados.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
</body>
</html>