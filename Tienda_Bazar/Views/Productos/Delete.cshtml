@model Tienda_Bazar.Models.Producto

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">Seguro que quiere eliminar el Producto?</h3></div>
                            <div class="card-body">
                                <form asp-action="Delete" method="post" enctype="multipart/form-data">
                                    <dl class="row">
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.NombreProducto)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.NombreProducto)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Precio)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Precio)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.DisponibilidadInventario)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.DisponibilidadInventario)
                                        </dd>
                                        <dt class="col-sm-2">
                                            @Html.DisplayNameFor(model => model.Estado)
                                        </dt>
                                        <dd class="col-sm-10">
                                            @Html.DisplayFor(model => model.Estado)
                                        </dd>
                                        <dt class="col-sm-2">
                                            Imagenes
                                        </dt>
                                        <dd class="col-sm-10">
                                            @if (Model.ImagenesProductos != null && Model.ImagenesProductos.Any())
                                            {
                                                @foreach (var imagen in Model.ImagenesProductos)
                                                {
                                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagen.Imagen)" alt="Producto" style="width: 100px; height: auto;" />
                                                }
                                            }
                                            else
                                            {
                                                <p>Actualmente el producto no cuenta con imagenes</p>
                                            }
                                        </dd>
                                    </dl>

                                    <div class="d-grid gap-2 mb-3">
                                        <input type="hidden" asp-for="CodigoProducto" />
                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                    </div>
                                </form>

                                <div class="d-grid gap-2 mb-3">
                                    <button class="btn btn-danger" type="submit"><a asp-action="Index" asp-controller="Productos" style="color:white; text-decoration:none">Regresar</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
