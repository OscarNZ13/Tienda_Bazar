@model Tienda_Bazar.Models.Producto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Precio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Precio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisponibilidadInventario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisponibilidadInventario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            Imagenes
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenesProductos != null && Model.ImagenesProductos.Any())
            {
                @foreach (var imagen in Model.ImagenesProductos)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(imagen.Imagen)" alt="Producto" style="width: 100px; height: auto;" />
                }
            }
            else
            {
                <p>Actualmente el producto no cuenta con imagenes</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CodigoProducto">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>