@{
    ViewBag.Title = "Bienvenida";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container-fluid py-5 bg-light text-dark">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h1 class="display-3 font-weight-bold text-primary mb-4">Bienvenido a Nuestro Bazar y Librería</h1>
            <p class="lead text-secondary mb-4">Descubre una amplia variedad de productos exclusivos y libros únicos solo para nuestros socios.</p>
            <div class="d-flex">
                <a href="@Url.Action("Login", "Acceso")" class="btn btn-success btn-lg mr-3">Inicia Sesión</a>
                <a href="@Url.Action("Contacto", "Paginas")" class="btn btn-info btn-lg mr-3">Contacto</a>
                <a href="@Url.Action("Redes", "Paginas")" class="btn btn-primary btn-lg">Redes Sociales</a>
            </div>
        </div>
        <div class="col-md-6 text-center">
            <img src="~/Images/imagen-bienvenida.jpg" alt="Bienvenida" class="img-fluid rounded-circle shadow-lg" style="max-width: 80%;">
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
                    <i class="fas fa-book fa-3x text-primary mb-3"></i>
                    <h3 class="card-title">Libros y Revistas</h3>
                    <p class="card-text">Explora nuestra colección de libros y revistas exclusivas.</p>
                    <a href="@Url.Action("Catalogo_USL", "Productos")" class="btn btn-primary btn-lg">Catalogo</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
                    <i class="fas fa-gift fa-3x text-success mb-3"></i>
                    <h3 class="card-title">Productos Exclusivos</h3>
                    <p class="card-text">Encuentra productos únicos y ofertas especiales solo para socios.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card border-0 shadow-lg">
                <div class="card-body">
                    <i class="fas fa-users fa-3x text-warning mb-3"></i>
                    <h3 class="card-title">Comunidad</h3>
                    <p class="card-text">Únete a nuestra comunidad y comparte tus opiniones y reseñas.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>


