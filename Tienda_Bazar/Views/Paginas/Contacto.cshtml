@{
    ViewData["Title"] = "Contacto";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="font-weight-light mb-4">Contáctanos</h1>
            <p class="mb-5">Estamos aquí para ayudarte. Si tienes alguna pregunta o necesitas asistencia, por favor no dudes en contactarnos.</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8">
            <div class="row mb-4">
                <div class="col-md-6 mb-4">
                    <h5>San José</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d125384.50667317255!2d-84.14076047359087!3d9.934739054021586!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0e35c5c6429df%3A0x4a3db3cace117c44!2sSan%20Jos%C3%A9%2C%20Costa%20Rica!5e0!3m2!1sen!2sus!4v1628165044321!5m2!1sen!2sus" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    <p class="mt-2"><i class="fas fa-map-marker-alt"></i> Dirección de San José, Costa Rica</p>
                    <p><i class="fas fa-phone"></i> +506 2222 2222</p>
                </div>
                <div class="col-md-6 mb-4">
                    <h5>Heredia</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62816.43478047723!2d-84.16078069016708!3d10.002493382201716!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0fb87275b6c1d%3A0xb43ed2cf72bcdb27!2sHeredia%2C%20Costa%20Rica!5e0!3m2!1sen!2sus!4v1628165074238!5m2!1sen!2sus" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    <p class="mt-2"><i class="fas fa-map-marker-alt"></i> Dirección de Heredia, Costa Rica</p>
                    <p><i class="fas fa-phone"></i> +506 2233 3333</p>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col-md-6 mb-4">
                    <h5>Alajuela</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62752.72226214996!2d-84.31504868987427!3d10.020223584076595!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa0a4f299d3804f%3A0x9a5f4a57b54270c7!2sAlajuela%2C%20Costa%20Rica!5e0!3m2!1sen!2sus!4v1628165104378!5m2!1sen!2sus" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    <p class="mt-2"><i class="fas fa-map-marker-alt"></i> Dirección de Alajuela, Costa Rica</p>
                    <p><i class="fas fa-phone"></i> +506 2444 4444</p>
                </div>
                <div class="col-md-6 mb-4">
                    <h5>Guanacaste</h5>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d126725.22937866567!2d-85.65105337274389!3d10.495870495163425!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f9fd741658aa5eb%3A0x38b1280b78872b8e!2sGuanacaste%2C%20Costa%20Rica!5e0!3m2!1sen!2sus!4v1628165132454!5m2!1sen!2sus" width="100%" height="200" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                    <p class="mt-2"><i class="fas fa-map-marker-alt"></i> Dirección de Guanacaste, Costa Rica</p>
                    <p><i class="fas fa-phone"></i> +506 2666 6666</p>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h5>Nuestro equipo se pondrá en contacto contigo</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nombre">Nombre</label>
                                <input type="text" class="form-control" id="nombre" placeholder="Tu nombre">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="apellidos">Apellidos</label>
                                <input type="text" class="form-control" id="apellidos" placeholder="Tus apellidos">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="email">Correo Electrónico</label>
                                <input type="email" class="form-control" id="email" placeholder="nombre@ejemplo.com">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="telefono">Teléfono</label>
                                <input type="tel" class="form-control" id="telefono" placeholder="Tu teléfono">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="empresa">Empresa</label>
                                <input type="text" class="form-control" id="empresa" placeholder="Tu empresa">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="cargo">Cargo</label>
                                <input type="text" class="form-control" id="cargo" placeholder="Tu cargo">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="web">Web</label>
                                <input type="url" class="form-control" id="web" placeholder="Tu sitio web">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="provincia">Provincia</label>
                                <select class="form-control" id="provincia">
                                    <option value="San José">San José</option>
                                    <option value="Heredia">Heredia</option>
                                    <option value="Alajuela">Alajuela</option>
                                    <option value="Guanacaste">Guanacaste</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="comentarios">Comentarios</label>
                            <textarea class="form-control" id="comentarios" rows="3" placeholder="Tus comentarios"></textarea>
                        </div>
                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" id="privacidad">
                            <label class="form-check-label" for="privacidad">Acepto la <a href="#">política de privacidad</a>.</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Solicita Información</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
    }

    .container {
        max-width: 1100px;
        margin: auto;
    }

    h1 {
        color: #007bff;
    }

    .card {
        border-radius: 15px;
    }

    .card-header {
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        border-radius: 10px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<!-- Font Awesome -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>
